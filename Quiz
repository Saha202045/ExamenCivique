// ============================================================
// STATE
// ============================================================
var US = {answered:0, correct:0, streak:0, best:0, ts:{}};
try { var saved = localStorage.getItem("cqv3"); if(saved) { var p = JSON.parse(saved); US.answered=p.answered||0; US.correct=p.correct||0; US.streak=p.streak||0; US.best=p.best||0; US.ts=p.ts||{}; } } catch(e){}
for(var i=0;i<THEMES.length;i++){ var tid=THEMES[i].id; if(!US.ts[tid]) US.ts[tid]={a:0,c:0}; }
function save(){ try{ localStorage.setItem("cqv3", JSON.stringify(US)); }catch(e){} }

// QUIZ STATE
var cTheme=null, cQs=[], cIdx=0, cAnswered=false;
var eQs=[], eIdx=0, eAnswered=false, eTimerInt=null, eTLeft=0, eResults=[];
var sessHist=[];
var eCfg={n:40, t:true};

// ============================================================
// SCREEN
// ============================================================
function show(id){
  var screens=document.querySelectorAll('.screen');
  for(var i=0;i<screens.length;i++) screens[i].classList.remove('active');
  document.getElementById(id).classList.add('active');
  var ids=['home','quiz-menu','exam-mode','progress','glossaire'];
  var btns=document.querySelectorAll('nav button');
  for(var i=0;i<btns.length;i++) btns[i].classList.toggle('active', ids[i]===id);
  if(id==='home') updateHome();
  if(id==='progress') renderProgress();
  if(id==='glossaire') renderGloss();
  if(id==='quiz-menu') renderGrids();
}

// ============================================================
// HOME
// ============================================================
function updateHome(){
  document.getElementById('sAnswered').textContent = US.answered;
  var p = US.answered>0 ? Math.round(US.correct/US.answered*100) : 0;
  document.getElementById('sScore').textContent = p+'%';
  document.getElementById('sStreak').innerHTML = '&#128293;'+US.streak;
  renderGrids();
}

function renderGrids(){
  var ids=['tgHome','tgMenu'];
  for(var g=0;g<ids.length;g++){
    var el=document.getElementById(ids[g]);
    if(!el) continue;
    var html='';
    for(var i=0;i<THEMES.length;i++){
      var t=THEMES[i];
      var s=US.ts[t.id];
      var p=s.a>0?Math.round(s.c/s.a*100):0;
      var tot=QUESTIONS[t.id].length;
      var label=s.a>0?(p+'% réussite'):'Pas encore joué';
      html+='<div class="tc" onclick="startTheme(\''+t.id+'\')"><span class="em">'+t.emoji+'</span><h3>'+t.name+'</h3><div class="cnt">'+tot+' questions</div><div class="pbar"><span style="width:'+p+'%"></span></div><div class="pct">'+label+'</div></div>';
    }
    el.innerHTML=html;
  }
}

// ============================================================
// QUIZ
// ============================================================
function startTheme(tid){
  cTheme=null;
  for(var i=0;i<THEMES.length;i++){ if(THEMES[i].id===tid){ cTheme=THEMES[i]; break; } }
  cQs=shuffle(QUESTIONS[tid].slice());
  cIdx=0; sessHist=[];
  show('quiz');
  document.getElementById('qThemeName').textContent=cTheme.emoji+' '+cTheme.name;
  document.getElementById('qProgress').style.width='0%';
  renderQ();
}

function renderQ(){
  if(cIdx>=cQs.length){ showResult(); return; }
  cAnswered=false;
  var q=cQs[cIdx];
  document.getElementById('qText').textContent=q.q;
  document.getElementById('qCounter').textContent=(cIdx+1)+' / '+cQs.length;
  document.getElementById('qProgress').style.width=Math.round(cIdx/cQs.length*100)+'%';
  document.getElementById('qFeedback').style.display='none';
  document.getElementById('qFeedback').className='feedback';
  document.getElementById('qNext').style.display='none';
  var L=['A','B','C','D'];
  var html='';
  for(var i=0;i<q.c.length;i++){
    html+='<button class="cbtn" id="cb'+i+'" onclick="selA('+i+')"><span class="cletter">'+L[i]+'</span><span>'+q.c[i]+'</span></button>';
  }
  document.getElementById('qChoices').innerHTML=html;
}

function selA(idx){
  if(cAnswered) return;
  cAnswered=true;
  var q=cQs[cIdx];
  var ok=(idx===q.a);
  sessHist.push({ok:ok, q:q.q});
  var btns=document.querySelectorAll('#qChoices .cbtn');
  for(var i=0;i<btns.length;i++){
    btns[i].disabled=true;
    if(i===q.a) btns[i].classList.add('correct');
    else if(i===idx && !ok) btns[i].classList.add('wrong');
  }
  var fb=document.getElementById('qFeedback');
  fb.style.display='block';
  if(ok){
    fb.className='feedback ok';
    fb.innerHTML='<strong>&#10003; Bonne réponse !</strong> '+q.e;
    US.streak++; US.best=Math.max(US.streak,US.best);
  } else {
    fb.className='feedback ko';
    fb.innerHTML='<strong>&#10007; Incorrect.</strong> La bonne réponse : <em>'+q.c[q.a]+'</em>. '+q.e;
    US.streak=0;
  }
  US.answered++; if(ok) US.correct++;
  US.ts[cTheme.id].a++; if(ok) US.ts[cTheme.id].c++;
  save();
  document.getElementById('qNext').style.display='block';
}

function nextQ(){ cIdx++; renderQ(); }
function retryQ(){ if(cTheme) startTheme(cTheme.id); }

function showResult(){
  var tot=sessHist.length;
  var right=0;
  for(var i=0;i<sessHist.length;i++) if(sessHist[i].ok) right++;
  var pct=tot>0?Math.round(right/tot*100):0;
  document.getElementById('rPct').textContent=pct+'%';
  document.getElementById('rFrac').textContent=right+' / '+tot+' correctes';
  var circ=document.getElementById('rCircle');
  var deg=Math.round(pct/100*360);
  circ.style.background='conic-gradient(var(--hot) 0deg, var(--purple) '+deg+'deg, var(--soft) '+deg+'deg)';
  var emoji,msg;
  if(pct>=90){emoji='&#127942;';msg='Excellent ! Tu maîtrises ce thème !';}
  else if(pct>=70){emoji='&#11088;';msg='Très bien ! Encore quelques révisions.';}
  else if(pct>=50){emoji='&#128170;';msg='Pas mal ! Continue.';}
  else{emoji='&#128218;';msg='Révise encore, tu vas y arriver !';}
  document.getElementById('rEmoji').innerHTML=emoji;
  document.getElementById('rMsg').textContent=msg;
  var html='';
  for(var i=0;i<sessHist.length;i++){
    var h=sessHist[i];
    html+='<div class="rrow"><span class="ri">'+(h.ok?'&#10003;':'&#10007;')+'</span><span class="rq">'+h.q+'</span><span class="rtag '+(h.ok?'ok':'ko')+'">'+(h.ok?'OK':'KO')+'</span></div>';
  }
  document.getElementById('rBreakdown').innerHTML=html;
  if(pct>=70) launchConfetti();
  show('result');
}

// ============================================================
// EXAM
// ============================================================
function setCfg(k,v){
  if(k==='n'){
    eCfg.n=v;
    document.getElementById('s40').classList.toggle('sel',v===40);
    document.getElementById('s20').classList.toggle('sel',v===20);
  } else {
    eCfg.t=v;
    document.getElementById('st1').classList.toggle('sel',v===true);
    document.getElementById('st0').classList.toggle('sel',v===false);
  }
}

function startExam(){
  var all=[];
  for(var i=0;i<THEMES.length;i++){
    var t=THEMES[i];
    var qs=QUESTIONS[t.id];
    for(var j=0;j<qs.length;j++) all.push({q:qs[j].q, c:qs[j].c, a:qs[j].a, e:qs[j].e, tid:t.id, tn:t.name, te:t.emoji});
  }
  eQs=shuffle(all).slice(0,eCfg.n);
  eIdx=0; eResults=[]; sessHist=[]; eAnswered=false;
  clearInterval(eTimerInt);
  show('exam-quiz');
  var etEl=document.getElementById('etimer');
  if(eCfg.t){
    eTLeft=eCfg.n===40?45*60:25*60;
    etEl.style.display='inline-flex';
    etEl.className='';
    startETimer();
  } else {
    etEl.style.display='none';
  }
  renderEQ();
}

function startETimer(){
  var el=document.getElementById('etimer');
  clearInterval(eTimerInt);
  eTimerInt=setInterval(function(){
    eTLeft--;
    var m=Math.floor(eTLeft/60), s=eTLeft%60;
    el.innerHTML='&#9201; '+m+':'+(s<10?'0':'')+s;
    if(eTLeft<=300) el.className='warn';
    if(eTLeft<=0){ clearInterval(eTimerInt); showExamResult(); }
  },1000);
}

function renderEQ(){
  if(eIdx>=eQs.length){ showExamResult(); return; }
  eAnswered=false;
  var q=eQs[eIdx];
  document.getElementById('eBadge').textContent=q.te+' '+q.tn;
  document.getElementById('eText').textContent=q.q;
  document.getElementById('eCounter').textContent=(eIdx+1)+' / '+eQs.length;
  document.getElementById('eProgress').style.width=Math.round(eIdx/eQs.length*100)+'%';
  document.getElementById('eFeedback').style.display='none';
  document.getElementById('eNext').style.display='none';
  var L=['A','B','C','D'];
  var html='';
  for(var i=0;i<q.c.length;i++){
    html+='<button class="cbtn" id="ecb'+i+'" onclick="selEA('+i+')"><span class="cletter">'+L[i]+'</span><span>'+q.c[i]+'</span></button>';
  }
  document.getElementById('eChoices').innerHTML=html;
}

function selEA(idx){
  if(eAnswered) return;
  eAnswered=true;
  var q=eQs[eIdx];
  var ok=(idx===q.a);
  eResults.push({q:q.q, ok:ok, tn:q.tn, te:q.te});
  sessHist.push({ok:ok});
  var btns=document.querySelectorAll('#eChoices .cbtn');
  for(var i=0;i<btns.length;i++){
    btns[i].disabled=true;
    if(i===q.a) btns[i].classList.add('correct');
    else if(i===idx && !ok) btns[i].classList.add('wrong');
  }
  var fb=document.getElementById('eFeedback');
  fb.style.display='block';
  if(ok){
    fb.className='feedback ok';
    fb.innerHTML='<strong>&#10003; Correct !</strong> '+q.e;
    US.streak++;
  } else {
    fb.className='feedback ko';
    fb.innerHTML='<strong>&#10007; Incorrect.</strong> Bonne réponse : <em>'+q.c[q.a]+'</em>. '+q.e;
    US.streak=0;
  }
  US.answered++; if(ok) US.correct++;
  US.ts[q.tid].a++; if(ok) US.ts[q.tid].c++;
  save();
  document.getElementById('eNext').style.display='block';
}

function examNext(){ eIdx++; renderEQ(); }

function showExamResult(){
  clearInterval(eTimerInt);
  var tot=eResults.length;
  var right=0;
  for(var i=0;i<eResults.length;i++) if(eResults[i].ok) right++;
  var pct=tot>0?Math.round(right/tot*100):0;
  document.getElementById('rPct').textContent=pct+'%';
  document.getElementById('rFrac').textContent=right+' / '+tot+' correctes';
  var deg=Math.round(pct/100*360);
  document.getElementById('rCircle').style.background='conic-gradient(var(--hot) 0deg, var(--purple) '+deg+'deg, var(--soft) '+deg+'deg)';
  var emoji,msg;
  if(pct>=80){emoji='&#127942;';msg='Bravo ! Score suffisant pour réussir ! (seuil ~80%)';}
  else if(pct>=60){emoji='&#128170;';msg='Bien, encore un peu de travail pour atteindre le seuil !';}
  else{emoji='&#128218;';msg='Continue à réviser ! L\'objectif est environ 80%.';}
  document.getElementById('rEmoji').innerHTML=emoji;
  document.getElementById('rMsg').textContent=msg;
  var html='';
  for(var i=0;i<eResults.length;i++){
    var r=eResults[i];
    html+='<div class="rrow"><span class="ri">'+(r.ok?'&#10003;':'&#10007;')+'</span><span class="rq">'+r.q+'</span><span style="font-size:.7rem;padding:.18rem .5rem;border-radius:99px;background:var(--soft);color:var(--hot);font-weight:600;flex-shrink:0">'+r.te+'</span><span class="rtag '+(r.ok?'ok':'ko')+'">'+(r.ok?'OK':'KO')+'</span></div>';
  }
  document.getElementById('rBreakdown').innerHTML=html;
  if(pct>=70) launchConfetti();
  show('result');
}

// ============================================================
// PROGRESS
// ============================================================
function renderProgress(){
  var gp=US.answered>0?Math.round(US.correct/US.answered*100):0;
  var html='<div class="card" style="margin-bottom:1.3rem"><h3 style="font-family:Playfair Display,serif;font-size:1.15rem;color:var(--hot);margin-bottom:1rem">&#128200; Résumé global</h3><div style="display:grid;grid-template-columns:repeat(3,1fr);gap:.9rem;text-align:center">';
  html+='<div><div style="font-family:Playfair Display,serif;font-size:1.7rem;color:var(--hot)">'+US.answered+'</div><div style="font-size:.72rem;color:#bbb">réponses</div></div>';
  html+='<div><div style="font-family:Playfair Display,serif;font-size:1.7rem;color:var(--hot)">'+gp+'%</div><div style="font-size:.72rem;color:#bbb">réussite</div></div>';
  html+='<div><div style="font-family:Playfair Display,serif;font-size:1.7rem;color:var(--hot)">&#128293;'+US.best+'</div><div style="font-size:.72rem;color:#bbb">meilleure série</div></div>';
  html+='</div></div>';
  for(var i=0;i<THEMES.length;i++){
    var t=THEMES[i];
    var s=US.ts[t.id];
    var p=s.a>0?Math.round(s.c/s.a*100):0;
    var tot=QUESTIONS[t.id].length;
    html+='<div class="tpc"><h3>'+t.emoji+' '+t.name+' <span style="font-size:.72rem;color:#bbb;font-weight:400">('+tot+' questions)</span></h3><div class="sub">'+s.c+' / '+s.a+' correctes'+(s.a>0?' — '+p+'%':' — Pas encore joué')+'</div><div class="bbar"><span style="width:'+p+'%"></span></div></div>';
  }
  html+='<div style="text-align:center;margin-top:1.3rem"><button class="big-btn sec" style="max-width:280px" onclick="resetStats()">&#128465; Réinitialiser</button></div>';
  document.getElementById('progContent').innerHTML=html;
}

function resetStats(){
  if(!confirm('Réinitialiser toute ta progression ?')) return;
  US={answered:0,correct:0,streak:0,best:0,ts:{}};
  for(var i=0;i<THEMES.length;i++) US.ts[THEMES[i].id]={a:0,c:0};
  save(); renderProgress(); updateHome();
}

// ============================================================
// GLOSSAIRE
// ============================================================
function renderGloss(f){
  f=f||'';
  var items=f?[]:GLOSSAIRE.slice();
  if(f){
    var fl=f.toLowerCase();
    for(var i=0;i<GLOSSAIRE.length;i++){
      if(GLOSSAIRE[i].t.toLowerCase().indexOf(fl)>=0 || GLOSSAIRE[i].d.toLowerCase().indexOf(fl)>=0) items.push(GLOSSAIRE[i]);
    }
  }
  items.sort(function(a,b){return a.t.localeCompare(b.t);});
  var html='';
  for(var i=0;i<items.length;i++){
    html+='<div class="gi" onclick="this.classList.toggle(\'open\')"><h4>'+items[i].t+' <span class="arr">&#9660;</span></h4><div class="def">'+items[i].d+'</div></div>';
  }
  document.getElementById('glossList').innerHTML=html;
}
function filterGloss(v){ renderGloss(v); }

// ============================================================
// CONFETTI
// ============================================================
function launchConfetti(){
  var w=document.createElement('div'); w.className='cw'; document.body.appendChild(w);
  var colors=['#FF1F8E','#B44FE8','#FFD700','#00C896','#FF6EC7','#FFFFFF'];
  for(var i=0;i<65;i++){
    var p=document.createElement('div'); p.className='cp';
    var size=6+Math.random()*8;
    var dur=(1.4+Math.random()*0.8).toFixed(2);
    var delay=(Math.random()*1.3).toFixed(2);
    p.style.cssText='left:'+Math.round(Math.random()*100)+'%;width:'+size+'px;height:'+size+'px;background:'+colors[Math.floor(Math.random()*colors.length)]+';border-radius:'+(Math.random()>.5?'50%':'3px')+';animation-duration:'+dur+'s;animation-delay:'+delay+'s;opacity:1;';
    w.appendChild(p);
  }
  setTimeout(function(){ if(w.parentNode) w.parentNode.removeChild(w); },3500);
}

// ============================================================
// UTILS
// ============================================================
function shuffle(a){
  for(var i=a.length-1;i>0;i--){
    var j=Math.floor(Math.random()*(i+1));
    var tmp=a[i]; a[i]=a[j]; a[j]=tmp;
  }
  return a;
}

// ============================================================
// INIT
// ============================================================
renderGrids();
updateHome();
renderGloss();
</script>
</body>
</html>
